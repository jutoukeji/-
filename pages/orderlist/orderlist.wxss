/* pages/orderlist/orderlist.wxss */
.container{
  height: auto;
  padding: 20rpx 0;
}
.dft-img{
  height: 256rpx;
  width: 256rpx;
  margin-top: 200rpx;
}
.tips{
  color: #666;
}
.button{
  display: inline-block;
  padding: 12rpx 60rpx;
  background: #f1902e;
  margin-top: 40rpx;
}
.item-box{
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #ececec;
  padding: 20rpx;
  background: #ffffff;
  position: relative;
}

.time{
  color: #999;
}

.item-box image{
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.status1{
  color: red;
}
.status2{
  color: green;
}
.status3{
  color: gray;
}
.pay-status{
  position: relative;
  padding-right: 32rpx;
  line-height: 32rpx;
}
.pay-status::after{
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  width: 32rpx;
  height: 32rpx;
  background: url('data:image/png;base64,')center no-repeat;
  background-size: 32rpx;
}